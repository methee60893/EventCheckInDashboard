@page "{id}"
@using EventCheckInDashboard.Services
@model EventCheckInDashboard.Pages.ActivityReportModel
@{
    ViewData["Title"] = Model.CurrentActivityName;
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container-fluid py-4 px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0">@Model.CurrentActivityName</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Report</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-3 align-items-center">
            <form method="get" class="d-flex align-items-center">
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0 text-muted">
                        <i class="bi bi-calendar-event"></i>
                    </span>
                    <select asp-for="FilterDate" asp-items="Model.DateList"
                            class="form-select border-start-0 shadow-none"
                            style="min-width: 200px; cursor: pointer;"
                            onchange="this.form.submit()">
                    </select>
                </div>
            </form>
            <a asp-page-handler="Export" asp-route-id="@Model.Id" class="btn btn-success text-white shadow-sm">
                <i class="bi bi-download me-2"></i>Export CSV
            </a>
        </div>
        <div class="d-flex gap-3">
            <div class="kp-card px-4 py-2 text-center border-warning border-2">
                <small class="text-muted d-block">TOTAL QUOTA</small>
                <span class="fs-4 fw-bold">@Model.TotalQuota.ToString("N0")</span>
            </div>
            <div class="kp-card px-4 py-2 text-center border-success border-2">
                <small class="text-muted d-block">USED (@(Model.FilterDate.HasValue? Model.FilterDate.Value.ToString("dd MMM") : "All"))</small>
                <span class="fs-4 fw-bold text-success">@Model.TotalUsed.ToString("N0")</span>
            </div>
            <div class="kp-card px-4 py-2 text-center bg-light">
                <small class="text-muted d-block">REMAINING</small>
                <span class="fs-4 fw-bold text-secondary">@((Model.TotalQuota - Model.TotalUsed).ToString("N0"))</span>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-7">
            <div class="kp-card h-100 p-3">
                <h5 class="kp-card-header mb-3"><i class="bi bi-bar-chart-fill me-2"></i>Daily Traffic & Sources</h5>
                <div class="mb-4" style="height: 300px;">
                    <canvas id="dailyChart"></canvas>
                </div>
                <!-- Sources Table (Transposed) -->
                <h6 class="text-muted fw-bold mb-2">Overall Redemption Breakdown (Sources)</h6>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered table-hover text-center align-middle" style="font-size: 0.9rem;">
                        <thead class="table-light">
                            <tr>
                                <th class="text-start ps-3" style="min-width: 150px;">Source</th>

                                @if (Model.DailyStats != null && Model.DailyStats.Any())
                                {
                                    @foreach (var day in Model.DailyStats)
                                    {
                                        
                                        <th style="min-width: 60px;" class="@(day.IsActiveDay ? "" : "bg-secondary text-white")">
                                            @day.DateDisplay
                                        </th>
                                    }
                                }
                                else
                                {
                                    <th>-</th>
                                }
                                <th class="bg-light fw-bold">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RedemptionHeaders != null)
                            {
                                @foreach (var type in Model.RedemptionHeaders)
                                {
                                    <tr>
                                        <td class="fw-bold text-start ps-3">@type</td>

                                        @if (Model.DailyStats != null && Model.DailyStats.Any())
                                        {
                                            @foreach (var day in Model.DailyStats)
                                            {
                                                if (day.IsActiveDay)
                                                {
                                                    // ดึงค่าแบบปลอดภัย (Defensive)
                                                    int val = 0;
                                                    if (day.RedemptionCounts != null && day.RedemptionCounts.ContainsKey(type))
                                                    {
                                                        val = day.RedemptionCounts[type];
                                                    }

                                                    <td class="@(val == 0 ? "text-muted opacity-25" : "")">@val.ToString("N0")</td>
                                                }
                                                else
                                                {
                                                    <td class="bg-light text-muted small">Closed</td>
                                                }
                                            }
                                        }
                                        else
                                        {
                                            <td class="text-muted">-</td>
                                        }

                                        @{
                                            int totalVal = 0;

                                            if (Model.TotalRedemptionStats != null && Model.TotalRedemptionStats.ContainsKey(type))
                                            {
                                                totalVal = Model.TotalRedemptionStats[type];
                                            }
                                        }
                                        <td class="fw-bold bg-light">@totalVal.ToString("N0")</td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot class="table-light fw-bold" style="border-top: 2px solid #dee2e6;">
                            <tr>
                                <td class="text-start ps-3">TOTAL</td>
                                @if (Model.DailyStats != null && Model.DailyStats.Any())
                                {
                                    @foreach (var day in Model.DailyStats)
                                    {
                                        <td>@(day.IsActiveDay? day.TotalCheckIn.ToString("N0") : "-")</td>
                                    }
                                }
                                else
                                {
                                    <td>0</td>
                                }
                                <td class="text-success">@Model.TotalUsed.ToString("N0")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="kp-card h-100 p-3">
                <h5 class="kp-card-header mb-3"><i class="bi bi-pie-chart-fill me-2"></i>Member Tier Analysis</h5>

                <div class="d-flex justify-content-center mb-4" style="height: 250px;">
                    <canvas id="tierChart"></canvas>
                </div>

                <h6 class="text-muted fw-bold mb-2">Tier Breakdown (Grand Total)</h6>
                <div class="table-responsive">
                    <table class="table table-sm table-bordered table-hover text-center align-middle" style="font-size: 0.85rem;">
                        <thead style="background-color: #1c3f94; color: white;">
                            <tr>
                                <th class="text-start ps-3">Tier</th>
                                @if (Model.DailyStats != null && Model.DailyStats.Any())
                                {
                                    @foreach (var day in Model.DailyStats)
                                    {
                                        <th>@day.Date.Day</th>
                                    }
                                }
                                else
                                {
                                    <th>-</th>
                                }
                                <th class="bg-warning text-dark">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.TierHeaders != null)
                            {
                                @foreach (var tier in Model.TierHeaders)
                                {
                                    // ดึงสีมาใช้อย่างปลอดภัย
                                    var tierColor = "#000";
                                    if (EventCheckInDashboard.Services.EventService.TierColors.ContainsKey(tier))
                                    {
                                        tierColor = EventCheckInDashboard.Services.EventService.TierColors[tier];
                                    }

                                    <tr>
                                        <td class="fw-bold text-start ps-3" style="color: @tierColor">@tier</td>

                                        @if (Model.DailyStats != null && Model.DailyStats.Any())
                                        {
                                            @foreach (var day in Model.DailyStats)
                                            {
                                                if (day.IsActiveDay)
                                                {
                                                    // ดึงค่าอย่างปลอดภัย (กันเหนียวสุดๆ)
                                                    int val = 0;
                                                    if (day.TierCounts != null && day.TierCounts.ContainsKey(tier))
                                                    {
                                                        val = day.TierCounts[tier];
                                                    }

                                                    <td class="@(val == 0 ? "text-muted opacity-25" : "")">@val.ToString("N0")</td>
                                                }
                                                else
                                                {
                                                    <td class="bg-light text-muted">-</td>
                                                }
                                            }
                                        }
                                        else
                                        {
                                            <td class="text-muted">-</td>
                                        }

                                        @{
                                            int totalVal = 0;
                                            if (Model.TableTotalTierStats != null && Model.TableTotalTierStats.ContainsKey(tier))
                                            {
                                                totalVal = Model.TableTotalTierStats[tier];
                                            }
                                        }
                                        <td class="fw-bold bg-light">@totalVal.ToString("N0")</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // 1. Bar Chart (Timeline) - ข้อมูลครบทุกวัน
        const dates = @Html.Raw(Json.Serialize(Model.DailyStats.Select(d => d.DateDisplay)));
        const totals = @Html.Raw(Json.Serialize(Model.DailyStats.Select(d => d.TotalCheckIn)));

        const ctxDaily = document.getElementById('dailyChart').getContext('2d');
        new Chart(ctxDaily, {
            type: 'bar',
            data: {
                labels: dates,
                datasets: [{
                    label: 'Check-ins',
                    data: totals,
                    backgroundColor: '#1c3f94',
                    borderRadius: 4
                }]
            },
            options: { responsive: true, maintainAspectRatio: false, plugins: { legend: { display: false } } }
        });

        // 2. Pie Chart - ใช้ข้อมูล PieChartTierStats (เปลี่ยนตาม Filter)
        const tierLabels = @Html.Raw(Json.Serialize(Model.PieChartTierStats.Keys));
        const tierData = @Html.Raw(Json.Serialize(Model.PieChartTierStats.Values));
        const tierColors = ['#3B65AF', '#FF1D25', '#FFC000', '#8D96A3'];

        const ctxTier = document.getElementById('tierChart').getContext('2d');
        new Chart(ctxTier, {
            type: 'doughnut',
            data: {
                labels: tierLabels,
                datasets: [{
                    data: tierData,
                    backgroundColor: tierColors,
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { position: 'right' } },
                animation: {
                    animateScale: true,
                    animateRotate: true
                }
            }
        });
    });
</script>
<style>
    .kp-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        border: 1px solid #eee;
    }

    .kp-card-header {
        color: #1c3f94;
        font-weight: bold;
        border-bottom: 2px solid #f4e6c8;
        padding-bottom: 10px;
    }

    .table th {
        font-weight: 600;
        white-space: nowrap;
    }

    .opacity-25 {
        opacity: 0.25;
    }
</style>